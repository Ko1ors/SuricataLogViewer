<Page x:Class="SuricataLogViewer.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuricataLogViewer.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Margin="5">
        <StackPanel>
            <GroupBox Header="Log Settings" FontSize="18" FontStyle="Italic" Foreground="#E4E3E3" BorderBrush="#204051" BorderThickness="2" Padding="10">
                <StackPanel>
                    <TextBlock Text="Log path or URL"/>
                    <TextBox/>
                </StackPanel>
            </GroupBox>

            <Separator Height="25" Opacity="0"/>

            <GroupBox Header="Charts Settings" FontSize="18" FontStyle="Italic" Foreground="#E4E3E3" BorderBrush="#204051" BorderThickness="2" Padding="10">
                <StackPanel>
                </StackPanel>
            </GroupBox>
            
        </StackPanel>
    </Grid>
</Page>
