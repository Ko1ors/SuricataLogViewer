<UserControl x:Class="SuricataLogViewer.Views.UserControls.GeoMapUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuricataLogViewer.Views.UserControls" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="#204051" BorderThickness="2" CornerRadius="25">
            <lvc:GeoMap HeatMap="{Binding Values}" Source="Maps/World.xml" Background="Transparent"/>
        </Border>
    </Grid>
</UserControl>
